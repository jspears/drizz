{
  "name": "@drizz/drizzle-example",
  "packageManager": "yarn@4.3.1",
  "private": true,
  "tspMain": "./lib/schema.tsp",
  "dependencies": {
    "@drizz/drizzle": "workspace:^",
    "@typespec/compiler": "^0.57.0",
    "drizzle-kit": "^0.22.7",
    "drizzle-orm": "^0.31.2",
    "pg": "^8.12.0"
  },
  "scripts": {
    "build": "tsp compile --emit @drizz/drizzle ./lib/schema.tsp --option \"@drizz/drizzle.emitter-output-dir={project-root}/drizzle\"",
    "generate": "drizzle-kit generate --config=./drizzle.config.ts",
    "migrate": "drizzle-kit migrate  --config=./drizzle.config.ts"
  }
}
